<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
      <h2 class="red-border px-3">新規登録</h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-4 col-4">
   <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :お名前, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :last_name, placeholder:"姓 例）令和", class: "form-control offset-1 col-5" %>
          <%= f.text_field :first_name, placeholder:"名 例）道子", class: "form-control offset-1 col-5" %>
        </div>
        <div class="row">
          <%= f.text_field :last_name_kana, placeholder:"セイ 例）レイワ", class: "form-control offset-1 col-5" %>
          <%= f.text_field :first_name_kana, placeholder:"メイ 例）ミチコ", class: "form-control offset-1 col-5" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例）sample@example.com", class: "form-control offset-1 col-11" %>
      </div>
      <div class="form-group">
      <%= f.label :郵便番号（ハイフンなし）,class: "brown-border px-3"%>
      <%= f.text_field :postal_code, placeholder:"例)0000000", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :住所, class: "brown-border px-3" %>
        <%= f.text_field :address,placeholder:"例)東京都渋谷区代々木神園町0-0",class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :電話番号（ハイフンなし）, class: "brown-border px-3" %>
        <%= f.text_field :telephone_number, placeholder:"例)0000000000", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: "brown-border px-3" %>
        <%= f.password_field :password, placeholder:"最低６文字必要", autocomplete: "new-password", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード確認, class: "brown-border px-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control offset-1 col-11" %>
      </div>
      

      <div class="row">
        <%= f.submit "新規登録", class: "btn btn-lg btn-danger mx-auto" %>
      </div>
    <% end %>

  </div>
</div>
  </div>
   <h3>既に登録済みの方</h3>
      <div class="row">
        <span class="col-xs-offset-"><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</span>
      </div>
</div>
</div>

